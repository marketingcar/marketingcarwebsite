# --- MIME types for YAML ---
<IfModule mod_mime.c>
  AddType text/yaml .yml
  AddType application/x-yaml .yaml
</IfModule>

# --- SPA rewrites (add an early exception for the CMS config) ---
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # 1) Never rewrite the CMS config file
  RewriteRule ^admin/config\.(yml|yaml)$ - [L]

  # 2) 301 Redirects for blog URLs moved from /about/blog/ to /blog/
  RewriteRule ^about/blog/5-quick-ways-to-improve-small-business-marketing/?$ /blog/5-quick-ways-to-improve-small-business-marketing [R=301,L]
  RewriteRule ^about/blog/small-business-marketing-crying/?$ /blog/small-business-marketing-crying [R=301,L]
  RewriteRule ^about/blog/small-business-marketing-like-bad-first-date/?$ /blog/small-business-marketing-like-bad-first-date [R=301,L]
  RewriteRule ^about/blog/most-marketing-is-terrible/?$ /blog/most-marketing-is-terrible [R=301,L]
  RewriteRule ^about/blog/lying-gps-marketing-not-broken/?$ /blog/lying-gps-marketing-not-broken [R=301,L]
  RewriteRule ^about/blog/better-marketing-map-not-faster-car/?$ /blog/better-marketing-map-not-faster-car [R=301,L]
  RewriteRule ^about/blog/how-to-build-content-strategy/?$ /blog/how-to-build-content-strategy [R=301,L]
  RewriteRule ^about/blog/how-to-set-marketing-goals/?$ /blog/how-to-set-marketing-goals [R=301,L]

  # General redirect for /about/blog to /blog
  RewriteRule ^about/blog/?$ /blog [R=301,L]

  # Handle future blog posts that might follow the old pattern
  RewriteRule ^about/blog/([^/]+)/?$ /blog/$1 [R=301,L]

  # 3) Your SPA catch-all
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteRule ^ index.html [L]
</IfModule>

<IfModule mod_headers.c>
  Header set X-Powered-By "Hostinger Horizons"

  # Enable browser caching for static assets
  <FilesMatch "\.(jpg|jpeg|png|gif|webp|svg|ico)$">
    Header set Cache-Control "public, max-age=31536000, immutable"
  </FilesMatch>
  
  # Cache JavaScript and CSS files for 1 year
  <FilesMatch "\.(js|css)$">
    Header set Cache-Control "public, max-age=31536000, immutable"
  </FilesMatch>
  
  # Cache fonts for 1 year
  <FilesMatch "\.(woff|woff2|ttf|otf|eot)$">
    Header set Cache-Control "public, max-age=31536000, immutable"
  </FilesMatch>
  
  # Don't cache HTML files to prevent stale chunk references
  <FilesMatch "\.(html)$">
    Header set Cache-Control "no-cache, no-store, must-revalidate"
    Header set Pragma "no-cache"
    Header set Expires "0"
  </FilesMatch>
  
  # Default CDN caching
  Header set Cache-Control "public, s-maxage=604800, max-age=3600"

  # --- Override specifically for the CMS config (place AFTER defaults so it wins) ---
  <FilesMatch "^config\.(yml|yaml)$">
    Header set Content-Type "text/yaml; charset=utf-8"
    Header set Cache-Control "no-store"
  </FilesMatch>
</IfModule>

<IfModule mod_deflate.c>
  # Enable compression for text-based files
  AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json application/xml+rss
</IfModule>

<IfModule mod_expires.c>
  ExpiresActive On
  
  # Images
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/gif "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/webp "access plus 1 year"
  ExpiresByType image/svg+xml "access plus 1 year"
  ExpiresByType image/x-icon "access plus 1 year"
  
  # CSS and JavaScript
  ExpiresByType text/css "access plus 1 year"
  ExpiresByType application/javascript "access plus 1 year"
  ExpiresByType text/javascript "access plus 1 year"
  
  # Fonts
  ExpiresByType font/woff "access plus 1 year"
  ExpiresByType font/woff2 "access plus 1 year"
  ExpiresByType application/font-woff "access plus 1 year"
  ExpiresByType application/font-woff2 "access plus 1 year"
  
  # HTML - no caching to prevent stale chunk references
  ExpiresByType text/html "access plus 0 seconds"
</IfModule>
